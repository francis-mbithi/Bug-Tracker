{{#partial "content"}}
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                    <div class="card p-4 mt-3">
                        <h3>Language: {{bug.category}}</h3>
                        <p>{{bug.content}}</p>
                    </div>
            </div>
        </div>
        <h3 class="text-center">Comments:</h3>
        <div class="row">
            <form>
                <div class="col-xs-">
                    <label for="username">User Name</label>
                    <input type="text" name="username" class="form-control" id="username" placeholder="Username input placeholder">
                </div>
                <div class="col-xs-4">
                    <label for="Comment">Comment</label> <br>
                    <textarea name = "comment" placeholder = "Message" id = "comment" ></textarea>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <h3 class="text-center">Comments</h3>
{{/partial}}

{{> layout.hbs}}